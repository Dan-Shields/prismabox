datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator prismabox {
  provider = "node ./dist/cli.js"
}

/// The user model
model User {
  /// @prismabox.hidden
  id       Int     @id @default(autoincrement())
  name     String? @unique
  title    String
  subtitle String
  misc     String  @unique

  /// @prismabox.hidden
  type Account
  age  Int

  posts Post[]

  @@unique([title, subtitle])
}

/// The post model
model Post {
  /// @prismabox.hidden
  id        Int      @id @default(autoincrement())
  /// @prismabox.hidden
  createdAt DateTime @default(now())

  User   User? @relation(fields: [userId], references: [id])
  /// @prismabox.options{max: 10}
  /// this is the user id
  userId Int?

  successorId Int?  @unique
  successor   Post? @relation("history", fields: [successorId], references: [id])
  predecessor Post? @relation("history")
}

/// @prismabox.hidden
enum Account {
  PASSKEY
  PASSWORD
}
