datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator typebox {
  provider = "node ./dist/index.js"
}

/// The user model
model User {
  id          Int     @id @default(autoincrement())
  name        String?

  posts Post[]
}

/// The post model
model Post {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  User   User? @relation(fields: [userId], references: [id])
  userId Int?
}
